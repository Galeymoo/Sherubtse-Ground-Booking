<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/admin.css" />
  <link rel="stylesheet" href="/css/admin-feedback.css" />
  <title>User Feedback</title>
</head>
<body>
  <%- include('Partials/admin-header') %>

  <main class="container">
  <h1>User Feedback</h1>

  <% if (feedbacks.length === 0) { %>
    <p class="no-feedback">No feedback found.</p>
  <% } else { %>
    <div class="feedback-table">
      <div class="table-header">
        <div>Subject</div>
        <div>Name</div>
        <div>Email</div>
        <div>Message</div>
        <div>Actions</div>
      </div>

      <div class="table-body">
        <% feedbacks.forEach(feedback => { %>
          <div class="table-row">
            <div class="cell subject"><%= feedback.subject %></div>
            <div class="cell name"><%= feedback.name %></div>
            <div class="cell email"><%= feedback.email %></div>
            <div class="cell message"><%= feedback.message %></div>
            <div class="cell actions">
              <form action="/admin-feedback/delete/<%= feedback.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                <button type="submit" class="delete-btn">Delete</button>
              </form>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  <% } %>
</main>

  <%- include('Partials/admin-footer') %>
</body>
</html>
